{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "lib": ["DOM", "ES2018", "ES2020.Intl"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018"
  },
  "include": [
    "src/*",
    "src/util/log.ts",
    "src/plugins/rerunECPlugin.ts",
    "src/plugins/rerunAllPlugin.ts",
    "src/rerunControllers/rerunAll.ts",
    "src/rerunControllers/rerunExecutionCount.ts",
    "src/rerunControllers/checkCorrectness.ts",
    "src/rerunControllers/handler.ts"
  ]
}
